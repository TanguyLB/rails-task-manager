<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h1><%= @task.title %></h1>
      <p><%= @task.details %></p>
      <% if @task.completed %>
        <p><i class="fa fa-check-square-o icon" aria-hidden="true"></i>This task is completed</p>
      <% else %>
        <p><i class="fa fa-square-o icon" aria-hidden="true"></i>This task is not completed yet</p>
      <% end %>
      <%= link_to "Back to list", tasks_path %>
      <hr>
      <%= link_to "Edit this task", edit_task_path %>
    </div>
  </div>
</div>



