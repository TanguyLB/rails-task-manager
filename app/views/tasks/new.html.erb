<h1>New task</h1>
<%= form_for(@task) do |f|%>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control text-center' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control text-center' %>
  </div>
  <%= f.submit class: 'btn btn-success', id: 'btn'%>
<% end %>
<%= link_to "Back to list", tasks_path %>
